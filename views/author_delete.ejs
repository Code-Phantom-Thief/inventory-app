<%- include('./partials/head.ejs') %>
<div class="container-fluid">
	<div class="row">
		<%- include('./partials/nav.ejs') %>
		<div class="col-sm-10">
			<h1>Author : <%= author.name %></h1>
			<p><%= author.lifespan %></p>
			<%if(author_songs.length > 0) {%>
			<p>
				<strong
					>Delete the following songs before attempting to delete this
					author.</strong
				>
			</p>
			<div style="margin-left: 20px; margin-top: 20px">
				<h4>Songs</h4>
				<dl>
					<% author_songs.forEach(song => { %>
					<dt>
						<a href="<%=song.url%>"><%=song.title%></a>
					</dt>
					<dd><%=song.summary%></dd>
				</dl>
				<%})%>
			</div>
			<%} else {%>
			<p>Do you really want to delete this Author?</p>
			<form action="" method="POST">
				<div class="form-group">
					<input
						type="hidden"
						class="authorid form-control"
						name="authorid"
						required
						value="<%=author._id%>"
					/>
				</div>
				<button class="btn btn-primary mb-2" type="submit">Delete</button>
			</form>
			<%}%>
				<a href="<%= author.url%> " >Back To Author List</a>
		</div>
	</div>
</div>

<%- include('./partials/foot.ejs') %>
