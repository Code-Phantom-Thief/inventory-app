<%- include('./partials/head.ejs') %>
<div class="container-fluid">
	<div class="row">
		<%- include('./partials/nav.ejs') %>
		<div class="col-sm-10">
			<h1>category : <%= category.name %></h1>
      <%if(category_songs.length > 0) {%>
        <p><strong>Delete the following songs before attempting to delete this category.</strong></p>
        <div style="margin-left:20px;margin-top:20px">
          <h4>songs</h4>
          <dl>
            <%category_songs.forEach(song => { %>
              <dt>
                <a href="<%=song.url%>"><%=song.title%></a>
              </dt>
              <dd><%=song.summary%></dd>
            </dl>
            <%})%>
        </div>
      <%} else {%>
        <p>Do you really want to delete this category?</p>
        <form action="" method="POST">
          <div class="form-group">
            <input 
              type="hidden" 
              class="categoryid form-control"
              name="categoryid"
              required
              value="<%=category._id%>"
            >
          </div>
          <button class="btn btn-primary" type="submit">Delete</button>
        </form>
      <%}%>
				<a href="<%= category.url%> " >Back To category List</a>
		</div>
	</div>
</div>

<%- include('./partials/foot.ejs') %>
